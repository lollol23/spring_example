<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.lollol23.spring.lesson03.dao.ReviewDAO">
 	<select id="selectReview" resultType="com.lollol23.spring.lesson03.model.Review"
 	parameterType="int">
 		SELECT
 			`id`
 			, `storeId`
 			, `menu`
 			, `userName`
 			, `point`
 			, `review`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`new_review`
 		WHERE
 			`id` = #{id}
 	</select>
 	
 	<insert id="insertReview" parameterType="map">
 		INSERT INTO
 			`new_review`
 		(
 			`storeId`
 			, `menu`
 			, `userName`
 			, `point`
 			, `review`
 			, `createdAt`
 			, `updatedAt`
 		) VALUES (
 			#{storeId}
 			, #{userName}
 			, #{point}
 			, #{review}
 			, now()
 			, now()
 		)
 		
 	</insert>
 	
 	<insert id="insertReviewAsObject" parameterType="com.lollol23.spring.lesson03.model.Review">
 		INSERT INTO
 			`new_review`
 		(
 			`storeId`
 			, `menu`
 			, `userName`
 			, `point`
 			, `review`
 			, `createdAt`
 			, `updatedAt`
 		) VALUES (
 			#{storeId}
 			, #{menu}
 			, #{userName}
 			, #{point}
 			, #{review}
 			, now()
 			, now()
 		)
 	</insert>
 	
 	<update id="updatedReviewById" parameterType="map">
 		UPDATE
 			`new_review`
 		SET
 			`review` = #{review}
 		WHERE
 			`id` = #{id}
 	</update>
 	
 	<delete id="deleteReview" parameterType="int">
 		DELETE FROM
 			`new_review`
 		WHERE
 			`id` = #{id}
 	</delete>
 </mapper>
 